<tr id="post_<%= post.id %>">
  <td><%= post.title %></td>
  <td><%= image_tag post.image if post.image.attached? %></td>
  <td><%= link_to 'Show', post, class: 'show_post', data: {remote: true} %></td>
  <td><%= link_to 'Edit', edit_post_path(post), data: {remote: true} %></td>
  <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?', remote: true } %></td>
</tr>